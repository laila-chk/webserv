server
{
#comments are only allowed in individual lines
    listen      192.168.1.1:80;
    server_name      name1.com;
    client_max_body_size 10;
    location
    {
        pattern   /path/to/files;
        limit_except  GET POST;
        return 301 https://hello.com/redirect;
        root    /root/redirectory;
        autoindex on;
        index   index.html index.php;
        cgi .php /aa/ee/php-fpm.sock ;
        cgi .py /ser/of/python;
#   comments could be inside any directive
    }
}
